#!/usr/bin/env ruby
require 'pathname'
require 'English'

# path to your application root.
APP_ROOT = Pathname.new File.expand_path('../../', __FILE__)

def execute(cmd)
  system(cmd)
  result = $CHILD_STATUS
  unless result.success?
    puts "ERROR: Command failed: #{cmd}"
    exit result.exitstatus
  end
end

Dir.chdir APP_ROOT do
  puts "== Installing dependencies =="
  execute('gem install bundler --conservative')

  # Swallow non-zero bundle check exit codes and run install
  system('bundle check') || execute('bundle install')
  execute "bower update --allow-root -F --config.analytics=false"

  puts "\n== Migrating database =="
  execute "bin/rake db:migrate"

  puts "\n== Seeding database =="
  execute "bin/rake db:seed GOOD_MIGRATIONS=skip"

  puts "\n== Migrating test database =="
  execute "RAILS_ENV=test bin/rake db:migrate"
end
