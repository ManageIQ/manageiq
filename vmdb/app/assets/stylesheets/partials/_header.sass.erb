#page_header_div.taskbar
  height: 131px
  margin-top: -2px !important

#page_header_div.taskbar.whitelabeled
  height: 142px

#page_header_div.notaskbar
  height: 98px
  margin-top: -2px !important

#page_header_div.notaskbar.whitelabeled
  height: 110px

.header
  height: 26px
  +linear-gradient(#005f84, #004e67)

.header.whitelabeled
  height: 38px

.header .pull-right
  float: right

.header .brand
  float: left
  margin: 0 0 0 20px
  padding: 4px 0
  width: 300px
  color: #fff
  text-shadow: none

.header .brand img
  display: block
  font-size: $base-font-size*.847

.header.whitelabeled .brand
  padding: 9px 0 0 0

.header .brand-white-label.whitelabeled
  float: right
  width: 350px
  height: 38px
  background: url(/upload/custom_logo.png) right top no-repeat
  background-size: auto 38px

.ie8 .header .brand-white-label.whitelabeled
  background: none
  -ms-filter: "progid:DXImageTransform.Microsoft.AlphaImageLoader(src='/upload/custom_logo.png',sizingMethod='scale')"
  filter: progid:DXImageTransform.Microsoft.AlphaImageLoader(src='/upload/custom_logo.png',sizingMethod='scale')

.ie8 .header .brand 
  background: url('<%= image_path("layout/brand.png") %>') no-repeat 0 50%

.ie8 .header .brand img
  width: 0
  height: 10px

.header li.dropdown
  float: right
  padding: 5px 10px 7px 10px 
  border-left: solid 1px #007aa4
  color: #fff
  font-size: $base-font-size*.847
  font-family: $base-font-family

.header li.dropdown:hover
  +linear-gradient(#005b7e, #006289)

.header.whitelabeled li.dropdown
  padding: 12px 10px 12px 10px

.header a.dropdown-toggle
  margin-top: 5px !important
  background: #000
  color: #fff
  font-size: $base-font-size*.847
  font-family: $base-font-family

.header .dropdown-menu
  padding-top: 12px
  padding-bottom: 4px
  border: 1px solid #b6b6b6 
  background: #fff !important
  box-shadow: 0pt 3px 7px rgba(0, 0, 0, 0.15)

.header ul#user_options_div.dropdown-menu
  position: absolute
  top: 28px
  right: 0px
  z-index: 100

.header.whitelabeled ul#user_options_div.dropdown-menu
  top: 40px

.header .dropdown-menu li
  float: none
  margin-right: 10px
  padding: 0 12px 0 12px
  width: auto
  height: 20px
  color: rgb(51, 51, 51)

.header .dropdown-menu li.active
  padding-top: 3px

.header .dropdown-menu li.active:hover
  margin-right: 0
  background: #3b9dd4
  color: #fff !important

.header .dropdown-menu li.divider
  display: block
  float: none
  margin: 5px 0 5px 0
  width: 100%
  height: 1px
  background: #e5e5e5

.header .dropdown .icon-user
  display: block
  float: left
  margin: 1px 5px 0 5px
  width: 11px
  height: 11px
  background: url(/images/layout/icon-user.svg) no-repeat
  background-size: 100% 
  vertical-align: middle

.ie8 .header .dropdown .icon-user
  background: url(/images/layout/icon-user.png) no-repeat

.header .dropdown .caret
  position: relative
  display: inline-block
  margin-left: 10px
  width: 0
  height: 0
  border-width: 4px
  border-top: 4px solid rgb(0,0,0)
  border-top-color: #fff
  border-right: 4px solid transparent
  border-bottom-color: #fff
  border-left: 4px solid transparent
  content: ""
  vertical-align: middle

.navbar
  height: 42px
  border-bottom: 32px solid #f6f6f6
  +linear-gradient(#00709e, #025f85)

.navbar-divider
  display: block
  float: none
  margin: 0 0 0 0
  width: 100%
  height: 1px
  background: #6a6a6a

/*Primary Nav*/

.navbar > ul
  border-top: 1px #007aa4 solid

.navbar > ul > li.inactive:hover
  border-top: 1px #007aa4 solid
  margin-top: -1px
  +linear-gradient(#005b7e, #006289)
  color: #fff   

.navbar > ul > li > a
  display: block
  padding: 12px 20px 13px 20px
  color: #fff

.navbar > ul > li.active
  border-top: 1px #007aa4 solid 
  margin-top: -1px
  +linear-gradient(#005373, #005f84)
  color: #fff  

/*Secondary Nav*/

.navbar > ul > li.inactive > ul
  display: none
  position: absolute
  margin-top: -2px !important

.navbar > ul > li.inactive:hover > ul
  display: block
  z-index: 100
  border: 1px solid #b6b6b6
  border-top: 0px
  padding: 5px 0 5px 0
  background: #fff
  box-shadow: 0pt 3px 7px rgba(0, 0, 0, 0.15)
  
.navbar > ul > li.inactive:hover > ul > li 
  float: none
  padding: 4px 0 0 10px
  
.navbar > ul > li.inactive:hover > ul > li:hover
  background: #3b9dd4
  
.navbar > ul > li.inactive:hover > ul > li > a
  display: block
  width: 140px
  height: 20px
  font-size: $base-font-size*.847
  color: rgb(51, 51, 51)
  
.navbar > ul > li.inactive:hover > ul > li:hover a
  color: #fff

.navbar > ul > li.active:hover > ul
  display: none
  
.navbar > ul > li.active > ul.active
  display: block
  position: absolute
  left: 0px
  padding: 6px

.navbar > ul > li.active > ul > li
  padding: 3px 20px 0 20px
  
.navbar > ul > li.active > ul > li.active > a
  border-bottom: 2px #2289ba solid
  color: #2289ba
       
.navbar > ul > li.active > ul > li > a
  padding-bottom: 5px
  color: #4d5258
  font-size: $base-font-size*.923
  
.navbar > ul > li.active > ul > li > a:hover
  border-bottom: 2px #2289ba solid
  color: #000
  text-decoration: none
