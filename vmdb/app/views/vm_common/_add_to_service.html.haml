= render :partial => "layouts/flash_msg"

%ul#tab
  %li.active
    %a.active
      = @title

= form_tag(:action => 'add_vm_to_service', :id => @vm) do

  %p.legend=_('Service Selection')
  %table.style1
    %tr
      %td.key=_('Service')
      %td
        = select_tag('chosen_service', options_for_select(@svcs.sort), {:multiple => false,
          :class => "widthed",
          "data-miq_focus" => true })

  #formbuttonplacement
    = button_tag(_("Add"),
      :name  => "add",
      :class => "btn btn-primary",
      :alt   => (t = _("Add VM to the selected Service")),
      :title => t,
      :type  => "submit")
    = button_tag((t = _("Cancel")),
      :name  => "cancel",
      :class => "btn btn-default",
      :alt   => t,
      :type  => "submit")
