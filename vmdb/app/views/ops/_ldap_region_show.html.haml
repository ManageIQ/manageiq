#main_div
  = render(:partial => "layouts/flash_msg")
  %fieldset
    %p.legend= _("Basic Information")
    %table.style1
      %tr
        %td.key= _("Name")
        %td
          = @selected_lr.name
      %tr
        %td.key= _("Description")
        %td
          = @selected_lr.description
      %tr
        %td.key= _("Zone")
        %td.wide
          = @selected_lr.zone ? @selected_lr.zone.name : ""
  %fieldset
    %p.legend= _("LDAP Domains")
    - if @selected_lr.ldap_domains.count <= 0
      = _("No Records found.")
    - else
      %table.style3
        - @selected_lr.ldap_domains.sort { |a, b| a.name.to_s <=> b.name.to_s }.each_with_index do |domain, i|
          - if i == 0
            %thead
              %th.icon
              %th= _("Name")
              %th= _("Base DN")
              %th= _("User Type")
              %th= _("User Suffix")
            %tbody
              %tr{:class       => cycle('row0', 'row1'),
                  :onclick     => "cfmeDynatree_activateNode('settings_tree', 'ld-#{to_cid(domain.id)}');",
                  :onmouseover => "this.style.cursor='pointer'",
                  :title       => _("Click to view details")}
                %td.icon{:nowrap => true}
                  %img{:src => "/images/icons/new/ldap_domain.png", :valign => "middle", :border => "0", :height => "20", :width => "20"}
                %td
                  = domain.name
                %td
                  = domain.base_dn
                %td
                  = domain.user_type
                %td
                  = domain.user_suffix
