- if @record && !@record.name.nil?
  .panel-group#accordion
    .panel.panel-default
      .panel-heading
        %h4.panel-title
          = link_to(h(@record.name.length < trunc_at ? @record.name : "#{@record.name[0...trunc_to]}..."),
            '#collapseOne',
            'data-toggle' => 'collapse',
            'data-parent' => 'accordion',
            :title  => h(@record.name))
        #icon{:style => @panels["icon"] ? '' : 'display: none;' }

      #collapseOne.panel-collapse.collapse.in
        .panel-body
          = render :partial => "layouts/quadicon", :locals => {:mode => :icon, :item => @record, :size => 72, :typ => :listnav}

    .panel.panel-default
      .panel-heading
        %h4.panel-title
          = link_to(_("Properties"),
            '#collapseTwo',
            'data-parent' => 'accordion',
            'data-toggle' => 'collapse')

      #collapseTwo.panel-collapse.collapse
        .panel-body
          %ul.nav.nav-pills.nav-stacked
            %li
              = link_to_with_icon(_('Summary'),
                {:action => 'show', :id => @record, :display => 'main'},
                :title => _("Show Summary"))

    .panel.panel-default
      .panel-heading
        %h4.panel-title
          = link_to(_("Relationships"),
            '#collapseThree',
            'data-parent' => 'accordion',
            'data-toggle' => 'collapse')

      #collapseThree.panel-collapse.collapse
        .panel-body
          %ul.nav.nav-pills.nav-stacked
            %li
              - if role_allows(:feature => "ems_cloud_show")
                - if @record.ext_management_system
                  %li
                    = link_to_with_icon("#{ui_lookup(:table => "ext_management_systems")}: #{@record.ext_management_system.name}",
                      {:controller => "ems_cloud", :action => 'show', :id => @record.ext_management_system.id.to_s},
                      {:title => _("Show this Flavor's parent %s") % ui_lookup(:table => "ems_cloud")})

              - if role_allows(:feature => "vm_show_list")
                - if @record.number_of(:vms) == 0
                  %li.disabled
                    =link_to(_("Instances (%s)") % @record.number_of(:vms),
                      "#")
                - else
                  %li
                    = link_to_with_icon(_("Instances (%s)") % @record.number_of(:vms),
                      {:action => 'show', :id => @record, :display => 'instances'},
                      :title => _("Show all Instances"))
