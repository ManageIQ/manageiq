- trunc_at = 23
- trunc_to = 20
#listnav_div
  - if @lastaction == "show_list" && !session[:menu_click] && %w(vm miq_template offline retired templates host service repository storage ems_cloud ems_cluster resource_pool ems_infra).include?(@layout) && !@in_a_form
    = render :partial => "layouts/listnav/show_list", :locals => {:trunc_at => trunc_at, :trunc_to => trunc_to}
  - elsif @compare
    = render :partial => "layouts/listnav/compare_sections", :locals => {:size => 72, :trunc_at => trunc_at, :trunc_to => trunc_to}
  - elsif %w(action ontap_storage_system ontap_logical_disk cim_base_storage_extent ontap_storage_system condition ems_cluster host miq_proxy miq_schedule policy repository resource_pool scan_profile service storage_manager ontap_file_share snia_local_file_system storage timeline).include?(@layout)
    = render :partial => "layouts/listnav/#{@layout}", :locals => {:trunc_at => trunc_at, :trunc_to => trunc_to}
  - elsif %w(vm vm_cloud offline retired templates vm_or_template).include?(@layout) 
    = render :partial => "layouts/listnav/vm", :locals => {:trunc_at => trunc_at, :trunc_to => trunc_to}
  - elsif %w(availability_zone cloud_tenant ems_cloud ems_infra flavor miq_template orchestration_stack security_group).include?(@layout)
    = render :partial => "layouts/listnav/#{@layout}", :locals => {:trunc_at => trunc_at, :trunc_to => trunc_to}
  - else
    -# hack for IE7 and FF2
    %img{:src => "/images/clearpix.gif", :width => "219"}
