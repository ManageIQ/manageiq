<% content_for :trees do %>
  <div style="display:none"><%= render :partial =>"rsop_options" %></div>
<% end %>

<% content_for :accords do %>
  <%# Create the explorer dhtmlx layout/accordion JS objects %>
  <%= render(:partial => "layouts/dhtmlxlayout_explorer",
             :locals => {:accords=>@accords,
                         :left_cell_bottom=>"left_cell_bottom",
                         :width_factor=>"1/2",
                         :lock_slider=>true,
                         :layout_pattern=>"3J"}
      ) %>
<% end %>

<div id="main_div" style="width:100%;height:100%;overflow:auto;position:relative;"><%# Added position:relative so quads scroll properly in IE7 %>
  <%= render :partial => "rsop_results" %>
</div>