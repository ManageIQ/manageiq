%div{"ng-controller" => "containers.deployProviderDetailsCreateVMsController"}
  .miq-form-heading Master configuration
  %form.form-horizontal
    %div{"pf-form-group" => "", "pf-input-class" => "miq-touchspin-input-class", "pf-label" => "Number of Masters", "pf-label-class" => "miq-input-label-class miq-input-label-class-lg", :required => ""}
      .input-group.bootstrap-touchspin
        %span.input-group-btn
          %button.btn.btn-default.bootstrap-touchspin-down{"ng-click" => "masterCountDecrement()", :type => "button"} -
        %input#create-masters-count.bootstrap-touchspin.form-control{"ng-model" => "data.createMastersCount", :type => "text"}
          %span.input-group-btn
            %button.btn.btn-default.bootstrap-touchspin-up{"ng-click" => "masterCountIncrement()", :type => "button"} +
    %div{"pf-form-group" => "", "pf-input-class" => "miq-input-class", "pf-label" => "Base Name", "pf-label-class" => "miq-input-label-class miq-input-label-class-lg", :required => ""}
      %input#create-master-base-name{"ng-change" => "validateForm()", "ng-model" => "data.createMasterBaseName", :required => "", :type => "text"}/
    %div{"pf-form-group" => "", "pf-input-class" => "miq-input-class", "pf-label" => "Template", "pf-label-class" => "miq-input-label-class miq-input-label-class-lg", :required => ""}
      %select#masterCreationTemplate{"ng-change" => "updateNodesLikeMaster()", "ng-model" => "data.masterCreationTemplateId", "pf-select" => ""}
        %option{"ng-repeat" => "template in data.nodeCreationTemplates", :value => "{{template.id}}"} {{template.name}}
    %div{"pf-form-group" => "", "pf-input-class" => "miq-input-class", "pf-label" => "Memory", "pf-label-class" => "miq-input-label-class miq-input-label-class-lg", :required => ""}
      %input{"ng-blur" => "updateNodesLikeMaster()", "ng-change" => "validateForm()", "ng-enter" => "updateNodesLikeMaster()", "ng-model" => "data.createMastersMemory", :required => "", :type => "text"}/
    %div{"pf-form-group" => "", "pf-input-class" => "miq-input-class", "pf-label" => "CPU", "pf-label-class" => "miq-input-label-class miq-input-label-class-lg", :required => ""}
      %input{"ng-blur" => "updateNodesLikeMaster()", "ng-change" => "validateForm()", "ng-enter" => "updateNodesLikeMaster()", "ng-model" => "data.createMastersCpu", :required => "", :type => "text"}/
    %div{"pf-form-group" => "", "pf-input-class" => "miq-input-class", "pf-label" => "Logical Network", "pf-label-class" => "miq-input-label-class miq-input-label-class-lg", :required => ""}
      %input{"ng-blur" => "updateNodesLikeMaster()", "ng-change" => "validateForm()", "ng-enter" => "updateNodesLikeMaster()", "ng-model" => "data.createMastersNetwork", :required => "", :type => "text"}/
  .miq-form-heading Node configuration
  %form.form-horizontal
    %div{"pf-form-group" => "", "pf-input-class" => "miq-touchspin-input-class", "pf-label" => "Number of Nodes", "pf-label-class" => "miq-input-label-class miq-input-label-class-lg", :required => ""}
      .input-group.bootstrap-touchspin
        %span.input-group-btn
          %button.btn.btn-default.bootstrap-touchspin-down{"ng-click" => "nodeCountDecrement()", :type => "button"} -
        %input#create-nodes-count.bootstrap-touchspin.form-control{"ng-change" => "validateForm()", "ng-model" => "data.createNodesCount", :type => "text"}
          %span.input-group-btn
            %button.btn.btn-default.bootstrap-touchspin-up{"ng-click" => "nodeCountIncrement()", :type => "button"} +
    %div{"pf-form-group" => "", "pf-input-class" => "miq-input-class", "pf-label" => "Base Name", "pf-label-class" => "miq-input-label-class miq-input-label-class-lg", :required => ""}
      %input{"ng-change" => "validateForm()", "ng-model" => "data.createNodesBaseName", :required => "", :type => "text"}/
    .miq-input-checkbox-form
      .checkbox-inline
        %label.miq-checkbox-input-label.miq-checkbox-input-label-lg
          %input{"ng-change" => "updateNodesLikeMaster()", "ng-model" => "data.createNodesLikeMasters", :type => "checkbox"}
            Same as Master configuration
    %div{"pf-form-group" => "", "pf-input-class" => "miq-input-class", "pf-label" => "Template", "pf-label-class" => "miq-input-label-class miq-input-label-class-lg", :required => ""}
      %select#nodeCreationTemplate{"ng-disabled" => "data.createNodesLikeMasters", "ng-model" => "data.nodeCreationTemplateId", "pf-select" => ""}
        %option{"ng-repeat" => "template in data.nodeCreationTemplates", :value => "{{template.id}}"} {{template.name}}
    %div{"pf-form-group" => "", "pf-input-class" => "miq-input-class", "pf-label" => "Memory", "pf-label-class" => "miq-input-label-class miq-input-label-class-lg", :required => ""}
      %input{"ng-change" => "validateForm()", "ng-disabled" => "data.createNodesLikeMasters", "ng-model" => "data.createNodesMemory", :required => "", :type => "text"}/
    %div{"pf-form-group" => "", "pf-input-class" => "miq-input-class", "pf-label" => "CPU", "pf-label-class" => "miq-input-label-class miq-input-label-class-lg", :required => ""}
      %input{"ng-change" => "validateForm()", "ng-disabled" => "data.createNodesLikeMasters", "ng-model" => "data.createNodesCpu", :required => "", :type => "text"}/
    %div{"pf-form-group" => "", "pf-input-class" => "miq-input-class", "pf-label" => "Logical Network", "pf-label-class" => "miq-input-label-class miq-input-label-class-lg", :required => ""}
      %input{"ng-change" => "validateForm()", "ng-disabled" => "data.createNodesLikeMasters", "ng-model" => "data.createNodesNetwork", :required => "", :type => "text"}/
