%div{"ng-controller" => "containers.deployProviderCDNChannelController"}
  %div{"miq-wizard-substep" => "", "next-enabled" => "deploymentDetailsCDNComplete", "on-show" => "onCdnShow", "review-template" => "{{reviewTemplate}}", "step-id" => "details-channel", "step-priority" => "2", "step-title" => "CDN Channel"}
    .miq-form-heading Specify CDN configuration
    %div
      .checkbox-inline
        %label.miq-checkbox-input-label
          %input{"ng-change" => "validateForm()", "ng-model" => "data.cdnEnabled", :type => "checkbox"}
            Enable CDN Channel
        %form.form-horizontal.sub-group
          %div{"pf-form-group" => "", "pf-input-class" => "miq-input-class", "pf-label" => "Username", "pf-label-class" => "miq-input-label-class", :required => ""}
            %input#rhn-user-name{:name => "name", "ng-change" => "validateForm()", "ng-disabled" => "!data.cdnEnabled", "ng-model" => "data.rhnUsername", :required => "", :type => "text"}/
          %div{"pf-form-group" => "", "pf-input-class" => "miq-input-class", "pf-label" => "Password", "pf-label-class" => "miq-input-label-class", :required => ""}
            %input#rhn-password{:name => "name", "ng-change" => "validateForm()", "ng-disabled" => "!data.cdnEnabled", "ng-model" => "data.rhnPassword", :required => "", :type => "password"}/
          %div{"pf-form-group" => "", "pf-input-class" => "miq-input-class", "pf-label" => "SKU", "pf-label-class" => "miq-input-label-class", :required => ""}
            %input#rhn-sku{:name => "name", "ng-change" => "validateForm()", "ng-disabled" => "!data.cdnEnabled", "ng-model" => "data.rhnSKU", :required => "", :type => "text"}/
          .miq-input-checkbox-form
            .checkbox-inline
              %label.miq-checkbox-input-label
                %input{"ng-change" => "validateForm()", "ng-disabled" => "!data.cdnEnabled", "ng-model" => "data.specifySatelliteUrl", :type => "checkbox"}
                  RHN Satellite URL
              %input#satellite-url{:name => "name", "ng-change" => "validateForm()", "ng-disabled" => "!data.cdnEnabled || data.specifySatelliteUrl === false", "ng-model" => "data.rhnSatelliteUrl", :required => "", :type => "text"}/
