%div{"ng-controller" => "containers.deployProviderReviewController"}
  %form.form
    .wizard-miq-review-item
      %span.wizard-miq-review-item-label Storage Type:
      %span.wizard-miq-review-item-value {{getStorageType()}}
    %div{"ng-if" => "data.storageType == 'nfs'"}
      .wizard-miq-review-item
        %span.wizard-miq-review-item-label Server:
        %span.wizard-miq-review-item-value {{data.nfsStorageServer}}
      .wizard-miq-review-item
        %span.wizard-miq-review-item-label Path:
        %span.wizard-miq-review-item-value {{data.nfsStoragePath}}
