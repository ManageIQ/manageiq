.row.scrollable-sm{:style => "height: 100%"}
  .col-md-2.sidebar-pf.sidebar-pf-left{:style => "height: 100%"}
    %div
  .col-md-10{:style => "height: 100%; overflow-y: auto; overflow-x: hidden"}
    .row
      %miq-notification-section.col-md-12{:limit => "2", "show-info" => "{{true}}"}
      .col-md-12
        %form#form_div{:name => "form"}
          %h3
            Basic Information
          .form-horizontal
            .form-group
              .form-group
                %label.control-label.col-md-2
                  Name
                .col-md-8
                  %input#name.form-control{:checkchange => "", :maxlength => "255", :name => "name", "ng-model" => "mwNew.newProvider.name", "ng-required" => "true", :type => "text"}/
              .form-group
                %label.control-label.col-md-2
                  Type
                .col-md-8
                  %select{:name => "server_emstype", "ng-model" => "mwNew.newProvider.server_emstype", "ng-options" => "o as o for o in mwNew.types", "ng-required" => "true", "pf-select" => ""}
                    %option{:value => ""} No Type selected
              %div{"ng-if" => "mwNew.newProvider.server_emstype", "ng-switch" => "mwNew.newProvider.server_emstype"}
                %div{"ng-switch-default" => ""}
                  .form-group
                    %label.control-label.col-md-2
                      Hostname or IP address
                    .col-md-8
                      %input#hostname.form-control{ :maxlength => "255",
                                                    :name => "hostname",
                                                    "ng-model" => "mwNew.newProvider.hostname",
                                                    "ng-required" => "true",
                                                    :title => "Hostname or IPv4/IPv6 address",
                                                    :type => "text",
                                                    :value => ""}/
                  .form-group
                    %label.control-label.col-md-2
                      Port
                    .col-md-8
                      %input#port.form-control{:maxlength => "5", :name => "port", "ng-model" => "mwNew.newProvider.port", "ng-required" => "true", :type => "text", :value => ""}/
              .form-group
                %label.control-label.col-md-2
                  Zone
                .col-md-8
                  %select{"ng-model" => "mwNew.newProvider.zone", "ng-options" => "o as o for o in mwNew.zones", "pf-select" => ""}
                    %option{:value => ""} No Zone selected
            %hr/
          .form-horizontal
            %h3
              Credentials
            .form-group{:style => "margin-left: 0px;"}
              %tabset
                %tab{:heading => "{{oneTab.title}}", "ng-repeat" => "oneTab in mwNew.credentialsTabs"}
                  %miq-validate-credentials{"model-holder" => "mwNew.newProvider", "model-name" => "{{oneTab.modelKey}}", "validate-action" => "mwNew.validateAction(validateData)"}
                  {{oneTab.description}}
            %hr/
          %miq-action-buttons.form-actions.pull-right{:actions => "mwNew.formActions", "is-valid" => "form.$valid"}
