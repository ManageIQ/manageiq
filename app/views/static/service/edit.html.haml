%form.form-horizontal#form_div{"name" => "angularForm"}
  %div
    %div
      .form-group{"ng-class" => "{'has-error': angularForm.name.$invalid}"}
  %div
    %div
      .form-group{"ng-class" => "{'has-error': angularForm.name.$invalid}"}
        %label.col-md-2.control-label{"for" => "name"}
          = _("Name")
        .col-md-8
          %input.form-control{"type"        => "text",
                              "id"          => "name",
                              "name"        => "name",
                              "ng-model"    => "serviceModel.name",
                              "maxlength"   => 50,
                              "required"    => "",
                              "checkchange" => "",
                              "auto-focus"  => ""}
          %span.help-block{"ng-show" => "angularForm.name.$error.required"}
            = _("Required")
      .form-group{"ng-class" => "{'has-error': angularForm.description.$invalid}"}
        %label.col-md-2.control-label{"for" => "description"}
          = _("Description")
        .col-md-8
          %input.form-control{"type"        => "text",
                              "id"          => "description",
                              "name"        => "description",
                              "ng-model"    => "serviceModel.description",
                              "maxlength"   => 50,
                              "required"    => "",
                              "checkchange" => ""}
          %span.help-block{"ng-show" => "angularForm.description.$error.required"}
            = _("Required")
  %paging-div-form-buttons{'paging_div_buttons_id'   => "angular_paging_div_buttons",
                           'paging_div_buttons_type' => "Save"}
:javascript
  $('#pc_div_1').hide();
  $('#form_buttons_div').html("<div id='angular_paging_div_buttons'></div>");
  miqDimDiv('#svcs_tree_div', true);
