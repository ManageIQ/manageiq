.mw_ds_add_step1{"ng-show" => "dsModel.step == 'STEP1'"}
  %h3
    = _("Step 1/3: Datasource Attributes")

  %ng-form.form-horizontal#form_step1{"name" => "step1Form"}
    .form-group
      %label.col-md-4.control-label{:for => "ds_name_input"}
        = _("Name")
      .col-md-8
        %input.form-control#ds_name_input{:type          => "text",
                                          "name"         => "ds_name_input",
                                          "placeholder"  => _("Enter Datasource name"),
                                          "ng-required"  => "true",
                                          "ng-maxlength" => "100",
                                          "ng-model"     => "step1DsModel.datasourceName"}

      .col-sm-8.col-sm-offset-4
        %p.ng-error-messages{"ng-show" => "step1Form.ds_name_input.$error.required"}
          = _("Required")
        %p.ng-error-messages{"ng-show" => "step1Form.ds_name_input.$error.maxlength"}
          = _("Maximum length is 100")

    .form-group
      %label.col-md-4.control-label{:for => "jndi_name_input"}
        = _("JNDI Name")
      .col-md-8
        %input.form-control#jndi_name_input{:type          => "text",
                                            "name"         => "jndi_name_input",
                                            "placeholder"  => _("Enter JNDI name"),
                                            "ng-maxlength" => "256",
                                            "ng-required"  => "true",
                                            "ng-model"     => "step1DsModel.jndiName"}

      .col-sm-8.col-sm-offset-4
        %p.ng-error-messages{"ng-show" => "step1Form.jndi_name_input.$error.required"}
          = _("Required")
        %p.ng-error-messages{"ng-show" => "step1Form.jndi_name_input.$error.maxlength"}
          = _("Maximum length is 256")

    .modal-footer
      %button.btn.btn-default.dialog-cancel-button{:type      => "button",
                                                   "alt"      => (t = _("Cancel")),
                                                   "title"    => t,
                                                   "ng-click" => "reset()"}
        = t
      %button.btn.btn-default{:type      => "button",
                              "alt"      => (t = _("Back")),
                              "title"    => t,
                              "ng-click" => "addDatasourceStep1Back()"}
        = t
      %button.btn.btn-primary{:type         => "button",
                              "alt"      => (t = _("Next")),
                              "title"    => t,
                              "ng-click"    => "addDatasourceStep1Next()",
                              "ng-disabled" => "step1Form.$invalid"}
        = t
