                %input{:type => "radio", :id => field_id, :value => f[0], :name => field_id, :checked => checked, :onclick => disabled ? "" : onclick}
                = f[1]
          - else
            = options[field][1]
          - unless field_hash[:notes_display] == :hide || field_hash[:notes].blank?
            -# Display notes if available
            = field_hash[:notes]
