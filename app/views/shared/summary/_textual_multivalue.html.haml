%table{:cellpadding => "0", :cellspacing => "0"}
  - items.each do |item|
    %tr{:class => item[:title] ? '' : 'no-hover',
        :title => item[:title] ? item[:title] : "",
        :onclick => item[:link] ? "DoNav('#{item[:link]}');" : ""}
      %td{:style => "border: 0; margin: 0; padding: 0"}
        - if item[:image]
          %img{:src => image_path("100/#{item[:image]}.png")}
        = item[:value]
