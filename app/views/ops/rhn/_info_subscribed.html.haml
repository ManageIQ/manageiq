%p
  = _("Appliances in this region can be registered with:")

.form-horizontal.static
  .form-group
    %label.control-label.col-md-2
      = _("Service")
    .col-md-10
      %p.form-control-static
        = @customer.subscription
  .form-group
    %label.control-label.col-md-2
      = _("Server Address")
    .col-md-10
      %p.form-control-static
        = @customer.server
  .form-group
    %label.control-label.col-md-2
      = _("Account")
    .col-md-10
      %p.form-control-static
        = @customer.user_name
  .form-group
    %label.control-label.col-md-2
      = _("Organization")
    .col-md-10
      %p.form-control-static
        = @customer.company_name
  .form-group
    - label = _("Repository Name(s)")
    %label.control-label.col-md-2
      = label
    .col-md-10
      %p.form-control-static
        = @customer.update_repo_name

-#
