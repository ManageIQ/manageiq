#main_div
  = render(:partial => "layouts/flash_msg")
  %h3
    = _("Info")
  .form-horizontal.static
    .form-group
      %label.col-md-2.control-label
        = _("Name")
      .col-md-8
        %p.form-control-static
          = h(@selected_scan.name)
    .form-group
      %label.col-md-2.control-label
        = _("Description")
      .col-md-8
        %p.form-control-static
          = h(@selected_scan.description)
    .form-group
      %label.col-md-2.control-label
        = _("Type")
      .col-md-8
        %p.form-control-static
          = h(@selected_scan.mode)
  %hr/
  - unless @selected_scan.mode == "Host"
    - if @category
      %h3
        = _("Categories")
      .form-horizontal.static
        - @category.sort.each do |c|
          .form-group
            .col-md-8
              %p.form-control-static
                = h(c)
      %hr/
  - if @file
    %h3= _("File Items")
    %table.table.table-striped.table-bordered
      %thead
        %tr
          %th= _("Name")
          %th= _("Collect Contents?")
      %tbody
        - @file.sort.each do |f|
          %tr
            %td= h(f)
            %td= h(@file_stats["#{f}"])
    %hr/
  - unless @selected_scan.mode == "Host"
    - if @registry
      %h3= _("Registry Items")
      .form-horizontal.static
        - @registry.sort_by { |r| r["key"] }.each do |k|
          .form-group
            .col-md-8
              %p.form-control-static
                = h(k["hive"]) + "\\" + h(k["key"]) + " : " + h(k["value"])
  - if @nteventlog
    %h3
      = _("Event Log Items")
    .form-horizontal.static
      - @nteventlog.sort_by { |l| l[:name] }.each do |k|
        .form-group
          .col-md-8
            %p.form-control-static
              = h(k[:name])
