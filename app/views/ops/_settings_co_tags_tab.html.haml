- if @sb[:active_tab] == "settings_co_tags"
  #tab_div
    - url = url_for(:action => 'ce_new_cat')
    = form_tag(url_for(:action => 'ce_accept', :id => "config_form"), :class => "form-horizontal", :remote => true) do
      %h3
        = _("Choose a Category")
      .form-group
        %label.col-md-2.control-label
          = _("Category")
        .col-md-8
          = select_tag('classification_name',
                        options_for_select(@cats.sort, @cat.name),
                        :class    => "selectpicker")
          :javascript
            miqInitSelectPicker();
            miqSelectPickerEvent('classification_name', "#{url}")
      .form-group
        %label.col-md-2.control-label
          = _("Description")
        .col-md-8
          %p.form-control-static
            = h(@cat.example_text)
      .form-group
        %label.col-md-2.control-label
          = _("Show in Console")
        .col-md-8
          %p.form-control-static
            = h(@cat.show)
      %hr/
      = render :partial => 'classification_entries', :locals => {:entry => nil}
