#desc_content.desc_content
  %h3= h(@selected_server["name"])
  .form-horizontal.static
    .form-group
      %label.col-md-2.control-label= _("Hostname")
      .col-md-9
        %p.form-control-static= h(@selected_server[:hostname])
    .form-group
      %label.col-md-2.control-label= _("IP Address")
      .col-md-9
        %p.form-control-static= h(@selected_server[:ipaddress])
    .form-group
      %label.col-md-2.control-label= _("Status")
      .col-md-9
        %p.form-control-static= h(@selected_server[:status])
    .form-group
      %label.col-md-2.control-label= _("Started On")
      .col-md-9
        %p.form-control-static
          - t = @selected_server.started_on
          = h(t.blank? ? "" : format_timezone(t))
    .form-group
      %label.col-md-2.control-label= _("Memory Usage")
      .col-md-9
        %p.form-control-static= h(@selected_server["memory_usage"])
    .form-group
      %label.col-md-2.control-label= _("Memory Size")
      .col-md-9
        %p.form-control-static= h(@selected_server["memory_size"])
    .form-group
      %label.col-md-2.control-label= _("CPU Time")
      .col-md-9
        %p.form-control-static= h(@selected_server["cpu_time"])
    .form-group
      %label.col-md-2.control-label= _("CPU Percent")
      .col-md-9
        %p.form-control-static= h(@selected_server["percent_cpu"])
    .form-group
      %label.col-md-2.control-label= _("Version / Build")
      .col-md-9
        %p.form-control-static= h(@selected_server["version"])
