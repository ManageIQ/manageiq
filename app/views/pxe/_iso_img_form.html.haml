- url = url_for(:action => 'iso_img_form_field_changed', :id => "#{@img.id || "new"}")
#form_div
  = render :partial => "layouts/flash_msg"
  %h3
    = _('Basic Information')
  %form.form-horizontal
    .form-group
      %label.col-md-2.control-label
        = _('Type')
      .col-md-8
        - img_types = [["<#{_('Unknown')}>", nil]] + @edit[:pxe_image_types]
        = select_tag("image_typ",
                      options_for_select(img_types, @edit[:new][:img_type]),
                      :class    => "selectpicker")
      :javascript
         miqInitSelectPicker();
         miqSelectPickerEvent("image_typ", "#{url}")
