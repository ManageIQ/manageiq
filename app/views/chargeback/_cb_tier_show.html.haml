= render :partial => "layouts/flash_msg"
- if @edit && @edit[:current]
  = render :partial => "cb_tier_edit"
- else
  %h3= _('Basic Info')
  .form-horizontal.static
    .form-group
      %label.col-md-2.control-label
        = _('Description')
      .col-md-8
        %p.form-control-static
          = h(@record.description)
  %hr
  %h3= _('Tier Details')
  %table.table.table-bordered
    %thead
      %tr
        %th= _('Tier')
        %th= _('Description')
        %th= _('Start')
        %th= _('End')
        %th= _('Per Time')
        %th= _('Per Unit')
    %tbody
      - @sb[:selected_tier_details].each do |r|
        - @cur_group = r[:group] if @cur_group.nil?
        - if @cur_group != r[:group]
          - @cur_group = r[:group]
          %tr
            %td.active{:colspan => "6"} &nbsp;
        %tr
          %td
            = h(Dictionary.gettext(r[:group], :type => :tier_detail_group, :notfound => :titleize))
          %td
            = r[:description]
          %td
            = r[:chargeback_tier]
          %td{:align => "right"}
            = r[:tier]
          %td
            = r[:per_time]
          %td
            = r.per_unit_display
