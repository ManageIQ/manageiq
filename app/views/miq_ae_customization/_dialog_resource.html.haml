-#
  Parameters:
    tab     DialogTab object
    curr_pos sending it upto server so it can be used to reorder widgets
%div{:id => "t_#{curr_pos}|#{obj[:id]}", :title => _('Drag this Tab to a new location')}
  .panel.panel-default
    .panel-heading
      %h3.panel-title.sortable-handle{:style => "cursor: move;"}
        %a{:class => "#{parent_id}_#{obj[:id]}box"}
        = render :partial => 'dialog_res_remove',
          :locals => {:obj => obj,
            :parent_id     => parent_id,
            :typ           => typ,
            :curr_pos      => curr_pos}
        = h(obj[:label])
