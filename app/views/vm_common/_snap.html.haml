= form_tag({:action => 'snap_vm', :id => @record}, :id => "vm_snap_form") do
  = render :partial => "layouts/flash_msg"
  #form_div
    %h3= _('Snapshot Information')
    .form-horizontal
      .form-group
        %label.control-label.col-md-2
          = _('Name')
        .col-md-8
          = text_field_tag("name", @name, :maxlength => MAX_NAME_LEN, :class => "form-control", "data-miq_focus" => true)
      .form-group
        %label.control-label.col-md-2
          = _('Description')
        .col-md-8
          = text_area_tag("description", @description, :size => "50x4")
      .form-group
        %label.control-label.col-md-2
          = _('Snapshot VM memory')
        .col-md-8
          = check_box_tag("snap_memory", :value => "1", :checked => false)
  - unless @edit
    %hr
    %table{:width => "100%"}
      %tr
        %td{:align => "right"}
          = button_tag(_("Create"),
            :name  => "create",
            :class => "button",
            :alt   => (t = _("Create snapshot")),
            :title => t,
            :type  => "submit")
          = button_tag((t = _("Cancel")),
            :name  => "cancel",
            :class => "button",
            :alt   => t,
            :title => t,
            :type  => "submit")
