%div{'data-ng-app' => "topologyApp", 'ng-controller' => "containerTopologyController"}
  = stylesheet_link_tag 'container_topology'
  %image{:src => "/images/toolbars/refresh.png", 'ng-click' => "refresh()", :class => "btn btn-default refresh"}
  %kubernetes-topology-graph{:items => "items", :relations => "relations", :kinds => "kinds"}

  .legend
    %label#selected
    %div{'ng-if' => "kinds"}
      %kubernetes-topology-icon{:kind => "Replicator"}
        %svg.kube-topology
          %g.Replicator{:transform => "translate(21, 21)"}
            %circle{:r => "17"}
            %image{:height => "18", :width => "18", :x => "-9", "xlink:href" => "/images/icons/new/container_replicator.png", :y => "-9"}

      %label
        Replicators
      %kubernetes-topology-icon{:kind => "Pod"}
        %svg.kube-topology
          %g.Pod{:transform => "translate(21, 21)"}
            %circle{:r => "17"}
            %image{:height => "18", :width => "18", :x => "-9", "xlink:href" => "/images/icons/new/container_group.png", :y => "-9"}

      %label
        Pods
      %kubernetes-topology-icon{:kind => "Container"}
        %svg.kube-topology
          %g.Container{:transform => "translate(21, 21)"}
            %circle{:r => "17"}
            %image{:height => "18", :width => "18", :x => "-9", "xlink:href" => "/images/icons/new/container.png", :y => "-9"}


      %label
        Containers
      %kubernetes-topology-icon{:kind => "Service"}
        %svg.kube-topology
          %g.Service{:transform => "translate(21, 21)"}
            %circle{:r => "17"}
            %image{:height => "18", :width => "18", :x => "-9", "xlink:href" => "/images/icons/new/container_service.png", :y => "-9"}
      %label
        Services
      %kubernetes-topology-icon{:kind => "Node"}
        %svg.kube-topology
          %g.Node{:transform => "translate(21, 21)"}
            %circle{:r => "17"}
            %image{:height => "18", :width => "18", :x => "-9", "xlink:href" => "/images/icons/new/container_node.png", :y => "-9"}

      %label
        Nodes
      %kubernetes-topology-icon{:kind => "VM"}
        %svg.kube-topology
          %g.VM{:transform => "translate(21, 21)"}
            %circle{:r => "17"}
            %image{:height => "18", :width => "18", :x => "-9", "xlink:href" => "/images/icons/new/vm.png", :y => "-9"}

      %label
        VMs
      %kubernetes-topology-icon{:kind => "Host"}
        %svg.kube-topology
          %g.Host{:transform => "translate(21, 21)"}
            %circle{:r => "17"}
            %image{:height => "18", :width => "18", :x => "-9", "xlink:href" => "/images/icons/new/host.png", :y => "-9"}

      %label
        Hosts

