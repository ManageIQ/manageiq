- url = url_for(:action => "st_catalog_form_field_changed",
                :id     => "#{@edit[:rec_id] || "new"}")

#form_div
  = render :partial => "layouts/flash_msg"
  -# show form if Catalog bundle is being added or if it's an edit of existing catalog item, else force user to select type
  %h3
    =_('Basic Info')
  .form-horizontal
    .form-group
      %label.col-sm-2.control-label
        = _('Name')
      .col-sm-8
        %p.form-control-static
          = text_field_tag("name",
                         @edit[:new][:name].to_s,
                         :class => "form-control",
                         :maxlength         => 40,
                         "data-miq_observe" => {:interval => ".5",
                                                :url      => url}.to_json)
        = javascript_tag(javascript_focus('name'))
    .form-group
      %label.col-sm-2.control-label
        = _('Description')
      .col-sm-8
        %p.form-control-static
          = text_field_tag("description",
                         @edit[:new][:description],
                         :class => "form-control",
                         :maxlength         => 60,
                         "data-miq_observe" => {:interval => ".5",
                                                :url      => url}.to_json)
  %hr
  %h3
    = _('Assign Catalog Items')
  = render :partial => "column_lists"
