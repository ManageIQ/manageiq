- # Div to hold the actual tree

%div{:style => "display: none;"}
  #containers_tree_div{:style => "width: 100%; height: 100%;"}
    #containers_treebox{:style => "width: 100%; height: 100%; color: #000; overflow: scroll;"}
      = render(:partial => "layouts/dynatree",
        :locals         => {:tree_id => "containers_treebox",
          :tree_name                 => "containers_tree",
          :json_tree                 => @containers_tree,
          :onclick                   => "cfmeOnClick_SelectTreeNode",
          :select_node               => "#{x_node(:containers_tree)}",
          :base_id                   => "root",
          :no_base_exp               => true,
          :exp_tree                  => false,
          :tree_state                => true,
          :highlighting              => true,
          :autoload                  => true})
