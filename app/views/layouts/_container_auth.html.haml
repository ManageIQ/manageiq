- change_url ||= "form_field_changed"
- legendtext ||= _("Credentials")

%h3
  = legendtext
#auth_tabs
  %ul.nav.nav-tabs
    = miq_tab_header('default', 'default') do
      = _("Default")

  .tab-content
    = miq_tab_content('default', 'default') do
      %form.form-horizontal
        = render(:partial => "/layouts/auth_bearer_token",
                 :locals  => {:pfx          => "bearer",
                              :change_url   => change_url,
                              :ujs_button   => true,
                              :record       => record})

%hr
:javascript
  miq_tabs_init('#auth_tabs');
