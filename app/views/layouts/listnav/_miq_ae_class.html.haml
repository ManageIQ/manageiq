- if @record.try(:name)
  #accordion.panel-group
    = miq_accordion_panel(truncate(@record.name, :length => truncate_length), true, "icon")

    = miq_accordion_panel(_("Properties"), false, "miqaeclass_prop") do
      %ul.nav.nav-pills.nav-stacked
        %li
          = link_to(_('Summary'),
            {:action => 'show', :id => @record, :display => 'main'},
            :title => _("Show Summary"))
        %li
          = link_to(_("Instances (%{count})") % {:count => record.instances.count},
            {:action => 'show_instances', :id => @record.id},
            :title  => _("View Instances"),
            :align  => 'left',
            :border => '0')
