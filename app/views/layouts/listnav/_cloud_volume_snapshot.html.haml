- if @record.try(:name)
  #accordion.panel-group
    = miq_accordion_panel(truncate(@record.name, :length => truncate_length), true, "icon") do
      = render(:partial  => "layouts/quadicon",
               :locals   => {:mode => :icon,
               :item     => @record,
               :size     => 72,
               :typ      => :listnav})

    = miq_accordion_panel(_("Properties"), false, "cloud_volume_snapshot_prop") do
      %ul.nav.nav-pills.nav-stacked
        %li
          = link_to(_('Summary'), {:action => 'show', :id => @record, :display => 'main'}, :title => _("Show Summary"))

    = miq_accordion_panel(_("Relationships"), false, "cloud_volume_rel") do
      %ul.nav.nav-pills.nav-stacked
        - if role_allows(:feature => "ems_cloud_show") && @record.ext_management_system
          %li
            = link_to("#{ui_lookup(:table => "ext_management_system")}: #{@record.ext_management_system.name}",
              ems_cloud_path(@record.ext_management_system.id),
              :title => _("Show this Snapshot's parent %s") % ui_lookup(:table => "ems_cloud"))
        - if role_allows(:feature => "cloud_volume_show") && @record.cloud_volume
          %li
            = link_to("#{ui_lookup(:table => "cloud_volume")}: #{@record.cloud_volume.name}",
              cloud_volume_path(@record.cloud_volume.id),
              :title => _("Show this Snapshot's parent %s") % ui_lookup(:table => "cloud_volume"))
        - if role_allows(:feature => "cloud_volume_show_list")
          - if @record.number_of(:based_volumes) == 0
            %li.disabled
              = link_to(_('Cloud Volumes based on Snapshot (%s)') % @record.number_of(:based_volumes), "#")
          - else
            %li
              = link_to(_("Cloud Volumes based on Snapshot (%s)") % @record.number_of(:based_volumes),
                {:action => 'show', :id => @record, :display => 'cloud_volumes'},
                :title => _("Show all Cloud Volumes based on this Snapshot"))
        - if role_allows(:feature => "cloud_tenant_show") && @record.cloud_tenant
          %li
            = link_to("#{ui_lookup(:table => "cloud_tenant")}: #{@record.cloud_tenant.name}",
              cloud_tenant_path(@record.cloud_tenant.id),
              :title => _("Show this Snapshot's parent %s") % ui_lookup(:table => "cloud_tenant"))
