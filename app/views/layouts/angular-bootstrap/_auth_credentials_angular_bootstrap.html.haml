- validate_url ||= 'log_depot_edit'

%div{"ng-show" => "#{ng_show}"}
  .form-group{"ng-class" => "{'has-error': angularForm.log_userid.$error.required}"}
    %label.col-md-2.control-label{"for" => "textInput-markup"}
      = _("Username")
    .col-md-4
      %input.form-control{"type"        => "text",
                          "id"          => "textInput-markup",
                          "ng-required" => "#{ng_reqd_userid}",
                          "name"        => "log_userid",
                          "ng-model"    => "#{ng_model}.log_userid",
                          "checkchange" => ""}
      %span.help-block{"ng-show" => "angularForm.log_userid.$error.required"}
        = _("Required")

%div{"ng-show" => "#{ng_show}"}
  .form-group{"ng-class" => "{'has-error': angularForm.log_password.$error.required}"}
    %label.col-md-2.control-label{"for" => "textInput-markup"}
      = _("Password")
    .col-md-4
      %input.form-control{"type"         => "password",
                          "id"           => "textInput-markup",
                          "ng-required"  => "#{ng_reqd_password}",
                          "name"         => "log_password",
                          "ng-model"     => "#{ng_model}.log_password",
                          "verifypasswd" => "#{ng_model}",
                          "checkchange"  => ""}
      %span.help-block{"ng-show" => "angularForm.log_password.$error.required"}
        = _("Required")

%div{"ng-show" => "#{ng_show}"}
  .form-group{"ng-class" => "{'has-error': angularForm.log_verify.$error.required || (logVerifyCtrl != undefined && logVerifyCtrl.$error.verifypasswd)}"}
    %label.col-md-2.control-label{"for" => "textInput-markup"}
      = _("Verify Password")
    .col-md-4
      %input.form-control{"type"         => "password",
                          "id"           => "textInput-markup",
                          "ng-required"  => "#{ng_reqd_verify}",
                          "name"         => "log_verify",
                          "ng-model"     => "#{ng_model}.log_verify",
                          "verifypasswd" => "#{ng_model}",
                          "checkchange"  => ""}
      %span.help-block{"ng-show" => "angularForm.log_verify.$error.required"}
        = _("Required")
      %span.help-block{"ng-show" => "!angularForm.log_verify.$error.required && logVerifyCtrl != undefined && logVerifyCtrl.$error.verifypasswd"}
        = _("Passwords do not match")
      %br
      = render :partial => "layouts/angular/form_buttons_verify_angular",
               :locals  => {:ng_show           => "#{ng_show}",
                            :validate_url      => validate_url,
                            :id                => id,
                            :valtype           => valtype,
                            :basic_info_needed => defined?(basic_info_needed) ? basic_info_needed : nil}
