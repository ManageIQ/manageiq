- valtype ||= "default"

- if !session[:host_items].nil?
  - verify_title_on = "Validate the credentials by logging into the selected %s" % title_for_host
- else
  - verify_title_on = "Validate the credentials by logging into the Server"

%tr(ng-show="#{ng_show}")
  %td
  %td
    = button_tag("Validate",
                 :class    => "btn btn-primary btn-xs btn-disabled",
                 :alt      => "Validate",
                 :title    => "Validate",
                 "ng-show" => basic_info_needed ? "!miqService.canValidateBasicInfo()" : "!miqService.canValidate(angularForm)")
    = button_tag("Validate",
                 :class    => "btn btn-primary btn-xs",
                 :alt      => verify_title_on,
                 :title    => verify_title_on,
                 "ng-show" => basic_info_needed ? "miqService.canValidateBasicInfo()" : "miqService.canValidate(angularForm)")
