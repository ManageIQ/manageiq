- validate_url ||= 'log_depot_edit'
- prefix ||= 'log'

.form-group{'ng-show' => ng_show}
  %label.col-md-2.control-label
    = _("Client ID")
  .col-md-8
    %input.form-control{:type         => "text",
                        'ng-required' => true,
                        'ng-model'    => "#{ng_model}.#{prefix}_client_id",
                        :name         => "#{prefix}_client_id",
                        :maxlength    => 50,
                        :checkchange  => true}
.form-group{'ng-show' => ng_show}
  %label.control-label.col-md-2
    = _("API Key")
  .col-md-8
    %input.form-control{:type         => "text",
                        'ng-required' => true,
                        'ng-model'    => "#{ng_model}.#{prefix}_api_key",
                        :name         => "#{prefix}_api_key",
                        :maxlength    => 50,
                        :checkchange  => true}

.form-group{'ng-show' => ng_show}
  %label.col-md-2
  .col-md-4
    = render :partial => "layouts/angular/form_buttons_verify_angular",
                                 :locals  => {:ng_show           => ng_show,
                                              :validate_url      => validate_url,
                                              :id                => id,
                                              :valtype           => prefix,
                                              :basic_info_needed => defined?(basic_info_needed) ? basic_info_needed : nil}
