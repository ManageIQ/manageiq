.dc_tree_div
  %div{:id => "#{session[:tree_name]}box", :style => 'width: 100%'}
    = render(:partial => 'layouts/dynatree',
             :locals  => {:tree_id                     => "#{session[:tree_name]}box",
                          :tree_name                   => session[:tree_name],
                          :json_tree                   => session[:dc_tree],
                          :icon_size                   => @settings[:views][:treesize].to_i,
                          :click_url                   => '/vm/show/',
                          :onmousein                   => 'miqOnMouseIn_HostNet',
                          :onmouseout                  => 'miqOnMouseOut_HostNet',
                          :onclick                     => 'miqOnClick_HostNet',
                          :exp_tree                    => false,
                          :autoload                    => true,
                          :open_close_all_on_dbl_click => true})
