- # Div to hold the actual tree
#action_tree_div{:style => "width: 100%; height: 100%"}
  #action_treebox{:style => "width:100%; height: 100%; color: #000; overflow: hidden"}
  = render(:partial => "layouts/dynatree",
    :locals         => {:tree_id => "action_treebox",
      :tree_name    => "action_tree",
      :id_prefix    => "ac_",
      :json_tree    => @action_tree,
      :onclick      => "cfmeOnClick_SelectTreeNode",
      :select_node  => "#{x_node}",
      :base_id      => "root",
      :no_base_exp  => true,
      :exp_tree     => false,
      :highlighting => true,
      :multi_lines  => true})
