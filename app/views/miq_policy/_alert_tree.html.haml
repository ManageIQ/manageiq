- # Div to hold the actual tree
#alert_tree_div{:style => "width: 100%; height: 100%"}
  #alert_treebox{:style => "width: 100%; height: 100%; color: #000; overflow: hidden;"}
  = render(:partial => "layouts/dynatree",
    :locals         => {:tree_id => "alert_treebox",
      :tree_name                 => "alert_tree",
      :id_prefix                 => "al_",
      :json_tree                 => @alert_tree,
      :onclick                   => "cfmeOnClick_SelectTreeNode",
      :select_node               => x_node.to_s,
      :base_id                   => "root",
      :no_base_exp               => true,
      :exp_tree                  => false,
      :highlighting              => true,
      :multi_lines               => true})
