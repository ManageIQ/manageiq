- # Div to hold the actual tree
#policy_profile_tree_div{:style => "width: 100%; height: 100%;"}
  #policy_profile_treebox{:style => "width: 100%; height: 100%; color: #000; overflow: hidden;"}
  = render(:partial => "layouts/dynatree",
    :locals         => {:tree_id => "policy_profile_treebox",
      :tree_name                 => "policy_profile_tree",
      :id_prefix                 => "pp_",
      :json_tree                 => @policy_profile_tree,
      :onclick                   => "cfmeOnClick_SelectTreeNode",
      :select_node               => "#{x_node}",
      :base_id                   => "root",
      :no_base_exp               => true,
      :exp_tree                  => false,
      :highlighting              => true,
      :tree_state                => true,
      :autoload                  => true,
      :multi_lines               => true})
