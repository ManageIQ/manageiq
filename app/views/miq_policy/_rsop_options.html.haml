#rsop_options_div
  = render :partial => "rsop_form"
#left_cell_bottom{:align => "center"}
  #form_buttons_on{:style => session[:changed] ? "" : "display: none;"}
    - t = "Submit Policy Simulation for the selected VMs"
    = link_to("Submit",
      {:action => "rsop", :button => "submit"},
      :class                => "btn btn-primary",
      :alt                  => t,
      "data-miq_sparkle_on" => true,
      :remote               => true,
      :title                => t)
    - t = "Reset all Policy Simulation options"
    = link_to("Reset",
      {:action => "rsop", :button => "reset"},
      :class                 => "btn btn-default",
      :alt                   => t,
      "data-miq_sparkle_on"  => true,
      "data-miq_sparkle_off" => true,
      :remote                => true,
      :title                 => t)
  #form_buttons_off{:style => session[:changed] ? "display: none;" : ""}
    = button_tag(_("Submit"),
      :class => "btn btn-primary btn-disabled",
      :title => _("Select a VM to Submit the Simulation Options"))
    - t = "Reset all Policy Simulation options"
    = link_to("Reset",
      {:action => "rsop", :button => "reset"},
      :class                 => "btn btn-default",
      :alt                   => t,
      "data-miq_sparkle_on"  => true,
      "data-miq_sparkle_off" => true,
      :remote                => true,
      :title                 => t)
